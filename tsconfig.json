{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true, // do not remove this option!
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "**/*.spec.ts",
    "src/test-utils"
  ]
}
